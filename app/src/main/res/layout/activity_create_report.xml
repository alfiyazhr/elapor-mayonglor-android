<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_gradient"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitleHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Laporan"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sampaikan keluhan anda untuk desa yang lebih baik"
                android:textColor="#E0E0E0"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="32dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto Bukti"
                        android:textColor="@color/brand_primary"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="14sp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvImagePicker"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5F6FA">

                        <ImageView
                            android:id="@+id/ivReportImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add"
                            app:tint="@color/gray_hint"
                            android:padding="70dp"/>

                        <TextView
                            android:id="@+id/tvTapToUpload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tekan untuk upload foto"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/gray_text"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"/>
                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Judul Laporan"
                        android:layout_marginTop="24dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:errorIconDrawable="@drawable/ic_error"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:inputType="textCapSentences"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCategory"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        android:hint="Kategori Masalah">

                        <AutoCompleteTextView
                            android:id="@+id/etCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:inputType="none"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Deskripsi Lengkap"
                        android:layout_marginTop="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:errorIconDrawable="@drawable/ic_error"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top|start"
                            android:fontFamily="@font/poppins"
                            android:inputType="textMultiLine"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_chip_outline"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location_custom"
                                app:tint="@color/brand_primary"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lokasi Terdeteksi (GPS)"
                                    android:textSize="10sp"
                                    android:textColor="@color/gray_text"
                                    android:fontFamily="@font/poppins"/>

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sedang mengambil lokasi..."
                                    android:textSize="12sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/poppins_bold"
                                    android:maxLines="2"
                                    android:ellipsize="end"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivRefreshLocation"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_refresh"
                                android:padding="8dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:tint="@color/brand_primary"
                                android:contentDescription="Refresh lokasi"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/btnToggleManualLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gunakan alamat manual / lokasi lain?"
                            android:textColor="@color/brand_primary"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="end"
                            android:fontFamily="@font/poppins_bold"
                            android:background="?attr/selectableItemBackground"
                            android:padding="4dp"
                            android:clickable="true"
                            android:focusable="true"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tulis Alamat / Patokan Lengkap"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp"
                            app:startIconDrawable="@drawable/ic_location_custom"
                            app:startIconTint="@color/brand_primary"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:inputType="textMultiLine"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="32dp"
                        android:text="Kirim Laporan"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        android:backgroundTint="@color/brand_primary"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/stickyToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#134574"
        android:elevation="10dp"
        android:alpha="0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivBackSticky"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            app:tint="#FFFFFF"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tvStickyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Laporan"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:elevation="10dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>